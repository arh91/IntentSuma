<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/siguiente_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGUIENTE"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="594dp" />

    <Button
        android:id="@+id/foto_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HACER FOTO"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="509dp" />

    <Button
        android:id="@+id/envioDatos_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENVIAR DATOS"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="502dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="78dp" />

</androidx.constraintlayout.widget.ConstraintLayout>