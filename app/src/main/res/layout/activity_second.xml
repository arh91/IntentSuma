<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <Button
        android:id="@+id/anterior_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="ANTERIOR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enviarResultado_Btn" />

    <TextView
        android:id="@+id/numero1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="38dp"
        android:text="Numero 1"
        app:layout_constraintBaseline_toBaselineOf="@+id/mas"
        app:layout_constraintEnd_toEndOf="@+id/mas"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/numero2"
        app:layout_constraintEnd_toStartOf="@+id/numero2" />

    <TextView
        android:id="@+id/numero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="Numero 2"
        app:layout_constraintBaseline_toBaselineOf="@+id/igual"
        app:layout_constraintEnd_toStartOf="@+id/igual" />

    <TextView
        android:id="@+id/igual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="22dp"
        android:text="="
        app:layout_constraintEnd_toStartOf="@+id/resultadoSuma"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultadoSuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="62dp"
        android:text="Resultado"
        app:layout_constraintBaseline_toBaselineOf="@+id/igual"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/enviarResultado_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="177dp"
        android:text="ENVIAR RESULTADO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/anterior_Btn" />
</androidx.constraintlayout.widget.ConstraintLayout>